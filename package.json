{
  "name": "var-trans-ai",
  "displayName": "VarTransAI",
  "description": "AI-powered variable name translation from Chinese (or other languages) to English",
  "version": "0.0.3",
  "icon": "icon.jpg",
  "repository": "https://github.com/M4rtinnnnnn/var-trans-ai.git",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "var-trans-ai.translateVariable",
        "title": "Translate Variable Name"
      }
    ],
    "keybindings": [
      {
        "command": "var-trans-ai.translateVariable",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "var-trans-ai.translateVariable",
          "when": "editorTextFocus"
        }
      ]
    },
    "configuration": {
      "title": "VarTransAI",
      "properties": {
        "varTransAI.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for the selected AI model"
        },
        "varTransAI.baseUrl": {
          "type": "string",
          "default": "",
          "description": "Custom API base URL (optional)"
        },
        "varTransAI.modelProvider": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic",
            "openai-api-compatible"
          ],
          "default": "openai",
          "description": "Select the AI model provider"
        },
        "varTransAI.modelName": {
          "type": "string",
          "default": "gpt-4o",
          "description": "Model name to use (e.g., gpt-4o, claude-2, etc.)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/openai": "^1.3.22",
    "@ai-sdk/openai-compatible": "^0.2.14",
    "ai": "^4.3.16"
  }
}
