{
  "name": "var-trans-ai",
  "displayName": "VarTransAI",
  "description": "AI-powered variable name translation from Chinese (or other languages) to English",
  "publisher": "M4rtinnnnnn",
  "version": "0.0.2",
  "icon": "icon.jpg",
  "repository": "https://github.com/M4rtinnnnnn/var-trans-ai.git",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "var-trans-ai.translateVariable",
        "title": "Translate Variable Name"
      }
    ],
    "keybindings": [
      {
        "command": "var-trans-ai.translateVariable",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "VarTransAI",
      "properties": {
        "varTransAI.apiKey": {
          "type": "string",
          "default": "",
          "description": "API Key for the selected AI model"
        },
        "varTransAI.baseUrl": {
          "type": "string",
          "default": "",
          "description": "Custom API base URL (optional)"
        },
        "varTransAI.modelProvider": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic",
            "openai-compatible"
          ],
          "default": "openai",
          "description": "Select the AI model provider"
        },
        "varTransAI.modelName": {
          "type": "string",
          "default": "gpt-4o",
          "description": "Model name to use (e.g., gpt-4o, claude-2, etc.)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/openai": "^1.3.22",
    "@ai-sdk/openai-compatible": "^0.2.14",
    "ai": "^4.3.16"
  }
}